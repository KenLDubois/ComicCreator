@model IEnumerable<ComicCreator.Models.PanelText>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TailX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TailY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Panel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TailX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TailY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Panel.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
